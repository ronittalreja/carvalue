import CarPriceForm from '../components/car-price-form';

export default function Home() {
return (
  <section className="relative">
    <div className="mx-auto max-w-6xl px-4 min-h-[calc(100vh-64px)] grid md:grid-cols-2 gap-10 items-center py-6">
      <div>
        <h1 className="text-4xl font-bold mb-4">Welcome to Our Car Pricing Tool</h1>
        <p className="text-lg mb-8">Find the perfect car price with our easy-to-use form.</p>
        <CarPriceForm />
      </div>
      <div>
        <Image src="/hero-image.jpg" alt="Hero Image" width={500} height={500} className="w-full h-auto" />
      </div>
    </div>
  </section>
);
}
